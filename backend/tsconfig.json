{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
		"outDir": "./build",
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

		"sourceMap": true,
    "allowJs": true,

    "strict": true,
		"allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
		"noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
  }
}
