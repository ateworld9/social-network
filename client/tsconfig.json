{
  "compilerOptions": {
    "outDir": "./build",
    "module": "esnext",
    "target": "esnext",
    "lib": ["ESNext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, 
    "importsNotUsedAsValues": "preserve",
    "incremental": true
  },
  "exclude": ["**/node_modules"],
  "include": ["src"]
}
